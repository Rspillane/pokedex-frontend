{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vue", "@vue/runtime-core"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.tsx", "src/**/*.jsx"],
  "exclude": ["node_modules"]
}
